{
  "manifest_version": 3,
  "name": "FocusKit Blocker",
  "version": "0.1.0",
  "description": "Block distracting sites during focus sessions with dynamic rules.",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "FocusKit",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "commands": {
    "start_focus": {
      "suggested_key": { "default": "Ctrl+Shift+8" },
      "description": "Start a focus session with your Pomodoro focus minutes"
    },
    "stop_focus": {
      "suggested_key": { "default": "Ctrl+Shift+9" },
      "description": "Stop the current focus session"
    },
    "toggle_focus": {
      "suggested_key": { "default": "Ctrl+Shift+0" },
      "description": "Toggle focus on/off"
    },
    "start_pomodoro": {
      "suggested_key": { "default": "Ctrl+Shift+7" },
      "description": "Start Pomodoro cycle"
    },
    "stop_pomodoro": {
      "suggested_key": { "default": "Ctrl+Shift+6" },
      "description": "Stop Pomodoro cycle"
    }
  }
}